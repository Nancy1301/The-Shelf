<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="#562310"
        android:text="MENU"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#cb8b4d"
        android:textStyle="bold"
        android:textSize="33sp" />

    <Button
        android:id="@+id/mainadd_student"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80sp"
        android:background="#562310"
        android:onClick="add_student"
        android:text="Add Student"
        android:textColor="#cb8b4d"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/mainadd_books"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:background="#562310"
        android:onClick="add_books"
        android:text="Add Books"
        android:textColor="#cb8b4d"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/mainissue_books"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:background="#562310"
        android:onClick="Issue_books"
        android:text="Issue Books"
        android:textColor="#cb8b4d"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/mainreturn_books"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:background="#562310"
        android:onClick="Return_books"
        android:text="Return Books"
        android:textColor="#cb8b4d"
        android:textSize="19sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/mainlist_of_books"
        android:layout_width="307dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:background="#562310"
        android:onClick="Book_list"
        android:text="Book List"
        android:textColor="#cb8b4d"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:background="#562310"
        android:text="Add Books"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textColor="#cb8b4d"
        android:textStyle="bold"
        android:textSize="33sp" />

    <EditText
        android:id="@+id/Add_Book_names"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add name"
        android:layout_marginTop="50dp"
        android:ems="10"/>

    <EditText
        android:id="@+id/Add_book_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add book id"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:inputType="number"
        tools:ignore="DuplicateIds" />
    <EditText
        android:id="@+id/Add_author_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add author name"
        android:layout_marginTop="70dp"
        android:ems="10" />

    <Button
        android:id="@+id/addbookz"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#562310"
        android:text="ADD"
        android:textColor="#cb8b4d"
        android:textSize="30sp"
        android:textStyle="bold" />


</LinearLayout>